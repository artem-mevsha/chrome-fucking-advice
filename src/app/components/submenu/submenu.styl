.submenu
  display block
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.95)
  letter-spacing 0.025em
  font-family $font-helvetica
  z-index 2

  &__content
    position relative
    padding-left 0
    height 100vh
    overflow auto

  &__nav
    max-width 30%
    font-family $font-helvetica

    &_main
      position fixed
      left (100/6)%
      top (100/6)vh

      @media only screen and (min-width:480px) and (max-width:767px) 
        top 25vh
        left 20px

      @media only screen and (max-width:479px) 
        left 20px
        top 25vh

    &_aux
      margin-top 6.5rem
      padding-left 50%
      padding-top (100/6)vh
      padding-bottom (100/6)vh

      @media only screen and (min-width:480px) and (max-width:767px) 
        top 25vh
        left 20px

  &__link
    letter-spacing 0
    text-decoration none
    white-space nowrap
    transition color 0.33s ease
    font-size 7.2rem
    line-height .89
    color #999
    user-select none
    cursor pointer

    @media only screen and (max-width:479px) 
      font-size 6.4rem
      
    &:hover
      color #fff

    &_active
      color #fff
      cursor default
      
    &_disabled
      pointer-events none
      cursor default
      
      &:hover
        color #333
        
    &_size_small
      font-size 5rem
      line-height 0.92
      color #333

      &:hover
        color #ccc

      &.submenu__link_active
        color #666
        cursor default


  &__counter
    position fixed
    margin 0.2rem 0 0 -0.2rem
    top (100/6)%
    left (500/6)%
    width 25%
    height 20rem
    overflow hidden

  &__counter-value
    position absolute
    display block
    overflow hidden
    font-family $font-helvetica
    color #333
    font-size 11.5rem
    line-height 0.8

  &__footer
    position fixed
    left 0
    bottom 40px

    @media only screen and (min-width:480px) and (max-width:767px) 
      bottom 18px

    @media only screen and (max-width:479px) 
      bottom 18px

  &__footerlink
    display inline-block
    min-width (100/6)vw
    padding-right 40px
    color #666
    font-family $font-bebas
    font-size 1.4rem
    text-decoration none
    letter-spacing 0.02
    transition color 0.3s ease
    
    &:hover
      color #999

    &.router-link-exact-active
      display none
    
    @media only screen and (min-width:480px) and (max-width:767px) 
      font-size 14px
      padding-right 20px

    @media only screen and (max-width:479px) 
      font-size 14px
      padding-right 20px

    &:first-child
      padding-left 40px
      
      @media only screen and (min-width:480px) and (max-width:767px) 
        padding-left 20px

      @media only screen and (max-width:479px) 
        padding-left 20px
