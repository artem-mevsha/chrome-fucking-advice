.advice
  position absolute
  top 0
  width 100%
  height 100%
  font-size 1.4rem
  letter-spacing 0.02em
  transition transform 0.3s ease
  z-index 2

  &_fake
    z-index 1

  &:empty
    display none

  &__aligner
    display flex
    flex-direction column
    justify-content center
    height 100%

  &__content
    margin auto
    z-index 1
    text-align center

  &__bg
    display inline-block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position 50%
    background-size cover

    &:before
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba(0, 0, 0, 0.5)

    &_color
      &:before
        display none

  &__text
    display block
    text-align left
    position relative
    font-size 12.5rem
    line-height 0.9
    letter-spacing 0
    font-family $font-helvetica
    user-select none
    cursor pointer
    text-align center

    @media only screen and (max-width:767px)
      font-size 10rem

    @media only screen and (max-width:480px)
      font-size 8rem

    &_enlarged
      .advice__text
        font-size 19rem
        line-height 15.4rem

      .advice__img-holder
        height 13.6rem

  &__link
    text-align left

  &__btn
  &__link
    display inline-block
    text-decoration none
    color currentColor
    cursor pointer

  &__btn
    position relative
    border 1px solid currentColor
    margin 1.7rem auto 0.3rem
    padding 0.7rem 1.4rem
    font-size 3rem
    text-transform uppercase
    text-align center
    border-radius 1px
    background-color hsla(0, 0%, 100%, 0)
    transition background-color 0.6s ease, color 0.6s ease

    &:hover
      background-color #fff
      color #000
      transition background-color 0.3s ease, color 0.3s ease

    @media only screen and (min-width:480px) and (max-width:767px)
      font-size 2.4rem

    &_external
      &:after
      &:before
        content ''
        position absolute
        width 50%
        border-top 1px solid currentColor
        height 0
        top 50%
        min-width 50px
        max-width 100px
        transition border-color 0.6s ease

      &:before
        right 100%

      &:after
        left 100%

      &:hover
        &:after
        &:before
          transition border-color 0.3s ease
          border-color #fff

  &__tags
    text-align center
    margin-top 2.7rem

  &__tag
    display inline-block
    margin-right 1.6rem

    &:last-child
      margin-right 0

  &__tag-name
    letter-spacing 0.05em

  &__tag-link
    display inline-block
    padding 0.3rem 0.8rem
    border 1px solid currentColor
    border-radius 1px
    color #fff
    background-color hsla(0, 0%, 100%, 0)
    text-decoration none
    opacity 0.5
    transition all 0.6s ease
    cursor pointer

    @media only screen and (min-width:480px) and (max-width:767px)
      padding 3px 8px 1px
      font-size 14px

    @media only screen and (max-width:479px)
      padding 3px 8px 1px
      font-size 14px

    &_active
    &:hover
      color #000
      background-color #fff
      opacity 1
      border-color #fff

    &:hover
      transition all 0.3s ease

    &_active
      cursor default

    &_invert
      color currentColor

    &_invert.&_active
    &_invert:hover
      border-color #333
      background-color #333
      color #fff

  &__description
    margin-top 1.2rem
    font-size 4rem
    opacity 0.5

  &__share
    width 100%
    margin 0
    padding 0 16.666666666666668%
    position absolute
    left 0
    right 0
    bottom 36px
    text-align center
    z-index 1
    user-select none

    &:empty
      display none

    @media only screen and (min-width:480px) and (max-width:767px)
      padding 0 20px
      bottom 12px

    @media only screen and (max-width:479px)
      padding 0 20px
      bottom 16px

  &__social-item
    display inline-block
    margin-right 3rem
    font-size 1.4rem

    &:last-child
      margin-right 0

  &__social-link
    display inline-block
    position relative
    padding-left 2rem
    cursor default
