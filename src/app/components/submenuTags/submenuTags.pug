include ../../../../node_modules/bemto.pug/bemto

nav.submenu__nav.submenu__nav_aux
  ul(
    v-if='tags'
  )
    li(
      :key='tag.id'
      v-for='tag in tags'
    )
      a.submenu__link.submenu__link_size_small(
        :class='{ submenu__link_active: isTagActive(tag.alias) }'
        @click='chooseTag(tag.alias)'
        @mouseenter='showTagCount(tag.advicesCount)'
        @mouseleave='hideTagCount'
      )
        | {{ tag.name }}
  
  figure.submenu__counter
    transition(
	    appear
	    name='counter-slide'
	    mode='in-out'
	  )
      span.submenu__counter-value(v-if='tagCount') {{ tagCount }}
