.ui
  position absolute
  width 100%
  height 10rem
  padding-top 40px
  z-index 2

  @media only screen and (min-width:480px) and (max-width:767px)
    padding-top 20px

  @media only screen and (max-width:479px)
    padding-top 20px

  &:after
    display block
    width 100%
    height 25vh
    position absolute
    top 0
    background linear-gradient(180deg, rgba(0, 0, 0, 0.3) 0, transparent)
    opacity 0
    transition opacity 0.6s ease
    z-index 1

  &_hoverable
    z-index 11

    &:after
      content ''

    &:hover
      &:after
        opacity 1

  &_fixed
    position fixed
    top 0
    z-index 11

  &_abs
    position absolute
    top 0

  &_inverted
    color #fff

  &__logo
    position absolute
    top 37px
    left 40px
    z-index 10

    @media only screen and (min-width:480px) and (max-width:767px)
      top 17px
      left 20px

    @media only screen and (max-width:479px)
      top 18px
      left 20px

  &__logo-text
    height 20px
    color currentColor
    text-decoration none
    transition color 0.6s ease

    @media only screen and (min-width:480px) and (max-width:767px)
      font-size 16px

    @media only screen and (max-width:479px)
      font-size 14px

    &.router-link-exact-active
      cursor default

  &__chapter
    display inline-block
    padding 0.3rem 0.8rem 0.1rem
    border 1px solid #fff
    border-radius 1px
    background-color #fff
    font-size 1.4rem
    color #000
    text-decoration none
    opacity 1
    cursor pointer

    &.ui__chapter_invert
      border 1px solid #222
      background-color initial
      color #222

    @media only screen and (min-width:480px) and (max-width:767px)
      padding 3px 8px 1px
      font-size 14px

    @media only screen and (max-width:479px)
      padding 3px 8px 1px
      font-size 14px

  &__shortcuts
    position absolute
    top 33px
    right 40px
    text-align right
    z-index 10

    @media only screen and (min-width:480px) and (max-width:767px)
      top 13px
      right 20px

    @media only screen and (max-width:479px)
      top 13px
      right 80px

  &__logo
  &__shortcut
    font-size 1.6rem
    letter-spacing 0.02em

    @media only screen and (min-width:480px) and (max-width:767px)
      font-size 16px

  &__shortcut
    display inline-block
    text-decoration none
    text-transform uppercase
    color currentColor
    white-space nowrap
    margin-right 4rem
    cursor pointer
    line-height 2.4rem
    vertical-align middle
    user-select none
    transition color 0.6s ease

    &:last-child
      margin-right 0

    &.router-link-active
      cursor default

  &__shortcut_icon
    position relative
    top 3px
    margin-left -6px

    @media only screen and (max-width:479px)
      top 5px
      font-size 16px

  &__menu-icon
    width 3.1rem
    height 3.1rem
    cursor pointer
    position absolute
    right 40px
    margin-left -1.5rem
    margin-top -1rem
    z-index 3
    transition margin-top 0.1s ease, opacity 0.2s ease, color 0.6s ease-in-out

    @media only screen and (max-width:767px)
      width 30px
      height 30px
      margin-left 0
      margin-top -10px
      left auto
      right 15px
      top 20px

    &:after
    &:before
      content ''
      display block
      position absolute
      top 50%
      left 50%
      width 2.5rem
      margin-left -1.25rem
      height 0.2rem
      background-color currentColor
      transform rotate(0deg)
      transition all 0.2s ease-in-out

      @media only screen and (max-width:479px)
        width 20px
        height 1px
        margin-left -7px
        margin-top 2px

    &:before
      box-shadow 0 -0.6rem 0 0 currentColor

      @media only screen and (max-width:479px)
        box-shadow 0 -5px 0 0 currentColor

    &:after
      box-shadow 0 0.6rem 0 0 currentColor

      @media only screen and (max-width:479px)
        box-shadow 0 5px 0 0 currentColor

    &_opened
      &:after
      &:before
        box-shadow -4px 0 0 -1px hsla(0, 0%, 100%, 0)
        background-color currentColor

      &:before
        transform rotate(45deg)

      &:after
        transform rotate(-45deg)

    &:hover
      opacity 0.8
