.frontpage
  position absolute
  top 0
  width 100%
  height 100vh
  overflow hidden

  &__footer
    position absolute
    bottom 0
    height 15vh
    width 100%
    z-index 2

    &_hoverable
      &:after
        content ''
        display block
        width 100%
        height 100%
        position absolute
        bottom 0
        background linear-gradient(180deg, transparent 0, rgba(0, 0, 0, 0.3))
        opacity 0
        transition opacity 0.6s ease

      &:hover
        &:after
          opacity 1

  &__control
    position absolute
    bottom 36px
    font-size 1.4rem
    letter-spacing 0.02em
    color currentColor
    transition opacity 0.3s ease
    user-select none
    cursor pointer
    opacity 0.5
    z-index 2

    @media only screen and (min-width:480px) and (max-width:767px)
      bottom 16px

    &:hover
      opacity 0.8

    &_prev
      left 40px

      @media only screen and (min-width:480px) and (max-width:767px)
        left 20px

    &_next
      right 40px

      @media only screen and (min-width:480px) and (max-width:767px)
        right 20px

  &_medicine
    background-color #eee

  &_driving
    background-color #ffb902

  &_driving
    .advice__text
      border 10px solid currentColor
      padding 6rem 8rem
      border-radius 2rem

  &_driving
    .dash
      margin-right 0

  &_text
    .advice__text
      border 3rem solid #da570f
      padding 4rem 8rem

  &_text
    .dash
      margin-right 0
